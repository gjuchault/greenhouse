    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^5.0.0-alpha.8",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "nanoevents": "^5.1.5",
    "pg": "^8.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.1.2",
    "rfxcom": "^2.1.1",
    "serialport": "^8.0.7",
    "uuid": "^7.0.3",
    "zod": "^1.3.0"
