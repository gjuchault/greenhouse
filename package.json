{
  "name": "greenhouse",
  "version": "0.1.0",
  "description": "Greenhouse management through a Rapsberry PI and an Arduino",
  "main": "dist/index.js",
  "repository": "git@github.com:gjuchault/greenhouse.git",
  "author": "Gabriel Juchault <gabriel.juchault@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "server:clear": "rm -rf dist/server",
    "server:build": "tsc",
    "server:run": "node dist/server",
    "server:dev": "ts-node-dev src/server/index.ts",
    "app:clear": "rm -rf dist/app",
    "app:build": "NODE_ENV=production webpack",
    "app:dev": "NODE_ENV=development webpack-dev-server",
    "start": "concurrently \"npm:server:build\" \"npm:app:build\" && npm run server:run",
    "dev": "concurrently \"npm:app:dev\" \"npm:server:dev\"",
    "lint": "prettier --write src"
  },
  "dependencies": {
    "@serialport/parser-delimiter": "^8.0.6",
    "chalk": "^4.0.0",
    "dotenv": "^8.2.0",
    "nanoevents": "^5.1.5",
    "pg": "^8.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rfxcom": "^2.1.1",
    "serialport": "^8.0.7",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@types/pg": "^7.14.3",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/serialport": "^8.0.0",
    "@types/uuid": "^7.0.2",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^9.1.2",
    "concurrently": "^5.1.0",
    "css-loader": "^3.5.2",
    "fork-ts-checker-webpack-plugin": "^4.1.3",
    "html-webpack-plugin": "^4.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss-flexbugs-fixes": "^4.2.0",
    "postcss-loader": "^3.0.0",
    "postcss-normalize": "^8.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.4",
    "style-loader": "^1.1.3",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3",
    "typescript-plugin-css-modules": "^2.2.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
