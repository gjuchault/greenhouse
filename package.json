    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/serialport": "^8.0.0",
    "@types/uuid": "^7.0.2",
    "concurrently": "^5.1.0",
    "css-loader": "^3.5.2",
    "fork-ts-checker-webpack-plugin": "^4.1.3",
