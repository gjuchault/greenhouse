{
  "compilerOptions": {
    "target": "ES2019", 
    "lib": ["ES2019"],
    "module": "commonjs", 
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
